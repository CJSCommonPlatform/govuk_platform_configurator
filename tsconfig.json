{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "sourceRoot": "",
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": [
      "body-parser",
      "compression",
      "cookie-parser",
      "express",
      "express-serve-static-core",
      "mime",
      "node",
      "serve-static"
    ]
  },
  "exclude": [
    "node_modules",
    "!node_modules/@types/**/*.d.ts"
  ],
  "files": [
    "typings/index.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
